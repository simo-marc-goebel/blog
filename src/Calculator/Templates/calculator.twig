{% block body %}
    <body>

    <h1>Simple Calculator</h1>

    <form method="get" action="">
        <input type="number" name="a" value="{{ a }}" placeholder="Number 1" required>
        <select name="op">
            <option></option>
            <option value="+">+</option>
            <option value="-">âˆ’</option>
            <option value="*">*</option>
            <option value="/">/</option>
        </select>
        <input type="number" name="b" value="{{ b }}" placeholder="Number 2" required>
        <button type="submit">=</button>
    </form>

    {% if result is not null %}
        <div class="result">
            Result: {{ result }}
        </div>
    {% endif %}
    <br>

    </body>
{% endblock %}