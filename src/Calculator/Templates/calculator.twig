{% block title %} Calculator{% endblock %}

{% block body %}
    <body>

    <h1>Simple Calculator</h1>

    <form method="get" action="">
        <input type="number" name="a" value="{{ a }}" placeholder="Number 1" required>
        <select name="op">
            <option></option>
            <option value="+">+</option>
            <option value="-">âˆ’</option>
            <option value="*">*</option>
            <option value="/">/</option>
        </select>
        <input type="number" name="b" value="{{ b }}" placeholder="Number 2" required>
        <button type="submit">=</button>
    </form>

    {% if result is not null %}
        <div class="result">
            Result: {{ result }}
        </div>
    {% endif %}
    <p></p>
    <p></p>

    <form method="post" action="">
        <input type="text" name="fname" value="{{ fname }}" placeholder="First Name" required>
        <input type="text" name="lname" value="{{ lname }}" placeholder="Last Name" required>
        <input type="number" name="age" value="{{ age }}" placeholder="18" min="18" required>
        <input type="text" name="nickname" value="{{ nickname }}" placeholder="Nickname">

        <button type="submit">Submit!</button>

    </form>
    <p></p>
    {% if nickname is not null %}
        <div class="resPost">
            <p>NickName for: {{ lname }}, {{ fname }}, who is {{ age }} years old</p>
            <p>{{ nickname }}</p>
        </div>
    {% endif %}

    </body>
{% endblock %}